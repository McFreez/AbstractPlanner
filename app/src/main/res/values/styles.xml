<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="textColorPrimary">@color/primaryTextColor</item>
        <item name="textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorBackground">@color/colorPrimaryLight</item>-->
        <!--<item name="android:colorButtonNormal">@color/colorPrimary</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="commonListItemStyle">
        <item name="android:elevation">@dimen/list_item_elevation</item>
        <item name="android:outlineProvider">bounds</item>
    </style>

<!--    <style name="DialogFragmentStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
